{
  "name": "claude-vision",
  "version": "1.1.0",
  "description": "MCP server for screenshot capture in Claude Code - multi-monitor support, window capture, OCR, and more",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "claude-vision": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "claude",
    "claude-code",
    "screenshot",
    "screen-capture",
    "multi-monitor",
    "ocr",
    "anthropic",
    "ai-tools"
  ],
  "author": "Jeremy Harvey",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/meltingpixelsai/claude-vision"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "active-win": "^9.0.0",
    "node-screenshots": "^0.0.5",
    "sharp": "^0.33.0",
    "tesseract.js": "^5.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
